<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row my-4 border">
  <div class="col-md-5 my-2">
    <h2>{{post.title}}</h2>
  </div>
  <div class="col-md-7 my-3">
    <p>
      {{post.content}}
    </p>
      <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
</div>
{{/each}}
